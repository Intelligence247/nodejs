                                    "itemName": {
                                        "type": "string"
                                    },
                                    "pointsEarned": {
                                        "type": "number"
                                    }
                                },
                                "required": [
                                    "itemName",
                                    "pointsEarned"
                                ]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Purchase successful",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
